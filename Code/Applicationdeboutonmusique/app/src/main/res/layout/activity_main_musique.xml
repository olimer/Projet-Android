<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/imagesmusique2"
    >

    <Button
    android:id="@+id/buttonmusique1"
    android:layout_width="200px"
    android:layout_height="50px"
    android:text="musique 1"
    android:textColor="@android:color/holo_red_light"
    android:background="@android:color/transparent"
    />

    <Button
        android:id="@+id/buttonmusique2"
        android:layout_width="200px"
        android:layout_height="50px"
        android:text="musique 2"
        android:layout_marginLeft="200px"
        android:textColor="@android:color/holo_red_light"
        android:background="@android:color/transparent"
        />

    <Button
        android:id="@+id/buttonAjoutMusique"
        android:layout_width="300px"
        android:layout_height="100px"
        android:text="Ajouter musique"
        android:textColor="@android:color/background_dark"
        android:background="@android:color/holo_red_light"
        android:layout_marginBottom="94dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="750dp"
        android:background="@android:color/background_dark"
        >

        <Button
            android:id="@+id/Passer"
            android:layout_width="90px"
            android:layout_height="100px"
            android:background="@drawable/passer"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"

            />
        <Button
            android:id="@+id/Precedent"
            android:layout_width="90px"
            android:layout_height="100px"
            android:background="@drawable/precedent"
            />



        <Button
            android:id="@+id/Avancer"
            android:layout_width="90px"
            android:layout_height="100px"
            android:background="@drawable/avancer"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/buttonStop"
            android:layout_toEndOf="@+id/buttonStop"
            android:layout_marginLeft="23dp"
            android:layout_marginStart="23dp" />
        <Button
            android:id="@+id/Reculer"
            android:layout_width="90px"
            android:layout_height="100px"
            android:background="@drawable/reculer"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/Precedent"
            android:layout_toEndOf="@+id/Precedent"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp" />
        <Button
            android:id="@+id/buttonPlay"
            android:layout_width="90px"
            android:layout_height="100px"
            android:background="@drawable/play"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/buttonPause"
            android:layout_toStartOf="@+id/buttonPause"
            android:layout_marginRight="19dp"
            android:layout_marginEnd="19dp" />
        <Button
            android:id="@+id/buttonPause"
            android:layout_width="90px"
            android:layout_height="100px"
            android:background="@drawable/pause"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/buttonStop"
            android:layout_width="90px"
            android:layout_height="100px"
            android:textColor="@android:color/holo_red_light"
            android:background="@drawable/stop"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/buttonPause"
            android:layout_toEndOf="@+id/buttonPause"
            android:layout_marginLeft="22dp"
            android:layout_marginStart="22dp" />



    </RelativeLayout>
</RelativeLayout>






